<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
 android:orientation="vertical"
    android:layout_alignParentLeft="false"
    android:background="#BA68C8"
    tools:context="com.example.admin.birthdaylebo.MainActivity"
    android:weightSum="1">


 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">

         <ImageView
             android:id="@+id/imageView2"
             android:layout_width="match_parent"
             android:layout_height="235dp"
             android:layout_gravity="center_vertical"
             android:scaleType="centerCrop"
             android:src="@drawable/regularshow"
             android:layout_weight="1" />


         <TextView
             android:id="@+id/textView3"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/imageView2"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="34dp"
             android:layout_weight="0"
             android:fontFamily="casual"
             android:text="LIFE SHOULD NOT ONLY BE LIVED,IT SHOULD BE CELEBRATED. ENJOY YOUR DAY."
             android:textColor="#008844" />

         <TextView
             android:id="@+id/textView4"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView3"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="64dp"
             android:fontFamily="casual"
             android:text="LOVE LEBOHANG"
             android:layout_weight="0"
             android:textColor="#E91E63"
             android:padding="10dp"
             android:gravity="center"/>


     </LinearLayout>


 </ScrollView>





</LinearLayout>

